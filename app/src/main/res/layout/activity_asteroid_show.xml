<?xml version="1.0" encoding="utf-8"?>

<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="wpam.nasaviewer.AsteroidShowActivity">

    <ProgressBar
        android:id="@+id/progressBarAsteroidShow"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/buttonAsteroidUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show in NASA JPL"
        android:onClick="btnAsteroidJPL_OnClick"/>

    <TextView
        android:id="@+id/textViewAsteroidShow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:padding="2dp"/>

    <ExpandableListView
        android:id="@+id/lvExpAsteroid"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</android.widget.LinearLayout>

