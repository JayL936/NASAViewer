<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <android.widget.LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:context="wpam.nasaviewer.MainActivity">

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:onClick="ApodBtn_OnClick"
            android:text="Astronomy Picture of the Day" />

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:onClick="AsteroidsBtn_OnClick"
            android:text="Asteroids" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:onClick="EarthBtn_OnClick"
            android:text="Earth" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:onClick="MarsBtn_OnClick"
            android:text="Mars" />

    </android.widget.LinearLayout>
</ScrollView>